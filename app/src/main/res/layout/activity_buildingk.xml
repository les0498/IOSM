<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cookandroid.toodeole_iosm.BuildingkActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <ImageView
        android:id="@+id/buildingK_img"
        android:layout_width="match_parent"
        android:layout_height="257dp"
        android:layout_margin="10dp"
        android:src="@drawable/img5_k">
    </ImageView>
  </LinearLayout>


  <HorizontalScrollView
      android:layout_width="match_parent"
      android:layout_height="200dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <ImageView
          android:layout_width="248dp"
          android:layout_height="200dp"
          android:src="@drawable/img5_k1"></ImageView>

      <ImageView
          android:layout_width="248dp"
          android:layout_height="200dp"
          android:src="@drawable/img5_k2">
      </ImageView>

      <ImageView
          android:layout_width="248dp"
          android:layout_height="200dp"
          android:src="@drawable/img5_k3">
      </ImageView>

    </LinearLayout>
  </HorizontalScrollView>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="100dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:layout_margin="20dp"
          android:text="K동 스포츠센터"
          android:textSize="15dp"
          android:textColor="#000000"></TextView>
    </LinearLayout>
  </ScrollView>
</LinearLayout>