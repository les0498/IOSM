<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:background="#699EC8"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#8CBDD3"
            android:src="@drawable/ic_baseline_backspace_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="중식"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.cookandroid.toodeole_iosm.WebView.MainActivity">
        <!--메인 페이지-->


        <HorizontalScrollView
            android:layout_width="426dp"
            android:layout_height="125dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_jung"
                    android:layout_width="85dp"
                    android:layout_height="99dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:backgroundTint="#8CBDD3"
                    android:text="정사부마라탕"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_anseo"
                    android:layout_width="wrap_content"
                    android:layout_height="95dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="3dp"
                    android:backgroundTint="#8CBDD3"
                    android:text="안서\n반점"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_hb"
                    android:layout_width="wrap_content"
                    android:layout_height="92dp"
                    android:layout_marginLeft="7dp"

                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:backgroundTint="#8CBDD3"
                    android:text="흥부\n반점"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_hi"
                    android:layout_width="wrap_content"
                    android:layout_height="89dp"
                    android:layout_marginLeft="12dp"

                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="3dp"
                    android:backgroundTint="#8CBDD3"
                    android:text="하이린"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </HorizontalScrollView>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="586dp"></WebView>
    </LinearLayout>

</LinearLayout>