<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cookandroid.toodeole_iosm.School2Activity">

    <LinearLayout
        android:id="@+id/map_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/map_btn3"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:background="#04B9D8"
            android:enabled="false"
            android:text="건물 안내"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/map_btn4"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#3F88C1"
            android:text="길찾기"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/map_layout1"
        android:layout_width="match_parent"
        android:layout_height="563dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/schoolMap_img"
            android:layout_width="match_parent"
            android:layout_height="257dp"
            android:src="@drawable/img4"></ImageView>

        <LinearLayout
            android:layout_width="398dp"
            android:layout_height="304dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/building_a"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="A동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_b"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="B동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_c"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="C동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_d"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="D동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/building_e"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="E동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_f"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="F동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_h"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="H동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_i"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="I동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/building_k"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="K동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_l"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="L동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_n"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="N동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_s"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="S동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/building_v"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="V동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>

                <Button
                    android:id="@+id/building_w"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/button_state"
                    android:text="W동"
                    android:textColor="#000000"
                    android:textStyle="bold"></Button>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:orientation="horizontal"
            android:text="홈"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/foodButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_restaurant_24"
            android:orientation="horizontal"
            android:text="맛집"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/schoolButton"
            app:layout_constraintHorizontal_bias="0.705"
            app:layout_constraintStart_toEndOf="@+id/homeButton" />

        <Button
            android:id="@+id/schoolButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_map_24"
            android:orientation="horizontal"
            android:text="학교 \n지도"
            android:textColor="#455ACD"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/studentButton" />

        <Button
            android:id="@+id/studentButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_tips_and_updates_24"
            android:orientation="horizontal"
            android:text="학교 \n생활\n 팁"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/homeWorkButton" />

        <Button
            android:id="@+id/homeWorkButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_calendar_month_24"
            android:orientation="horizontal"
            android:text="과제"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/myPageButton" />

        <Button
            android:id="@+id/myPageButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_person_24"
            android:orientation="horizontal"
            android:text="마이\n 페이지"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>