<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cookandroid.toodeole_iosm.School3Activity">

    <LinearLayout
        android:id="@+id/map_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/map_btn5"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:background="#3F88C1"
            android:text="건물 안내"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/map_btn6"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="#04B9D8"
            android:enabled="false"
            android:text="길찾기"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"></Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Focus">
        </TextView>

        <Button
            android:id="@+id/buttonMove1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="#A0AAEB"
            android:text="정문"
            tools:ignore="TouchTargetSizeCheck"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="지도 확대 및 축소">
        </TextView>

        <Button
            android:id="@+id/buttonZoomIn"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="#A0AAEB"
            android:text="확대"
            tools:ignore="TouchTargetSizeCheck"></Button>

        <Button
            android:id="@+id/buttonZoomOut"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="#A0AAEB"
            android:text="축소"
            tools:ignore="TouchTargetSizeCheck"></Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTmap"
        android:layout_width="match_parent"
        android:layout_height="516dp"
        android:orientation="vertical"></LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:orientation="horizontal"
            android:text="홈"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <Button
            android:id="@+id/foodButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_restaurant_24"
            android:orientation="horizontal"
            android:text="맛집"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/schoolButton"
            app:layout_constraintHorizontal_bias="0.705"
            app:layout_constraintStart_toEndOf="@+id/homeButton" />

        <Button
            android:id="@+id/schoolButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_map_24"
            android:orientation="horizontal"
            android:text="학교 \n지도"
            android:textColor="#455ACD"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/studentButton" />

        <Button
            android:id="@+id/studentButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_tips_and_updates_24"
            android:orientation="horizontal"
            android:text="학교 \n생활\n 팁"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/homeWorkButton" />

        <Button
            android:id="@+id/homeWorkButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_calendar_month_24"
            android:orientation="horizontal"
            android:text="과제"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/myPageButton" />

        <Button
            android:id="@+id/myPageButton"
            android:layout_width="60dp"
            android:layout_height="130dp"
            android:layout_gravity="right"
            android:background="#FFF7B8"
            android:drawableTop="@drawable/ic_baseline_person_24"
            android:orientation="horizontal"
            android:text="마이\n 페이지"
            android:textColor="#434242"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>